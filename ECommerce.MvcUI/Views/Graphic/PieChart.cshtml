@{
    ViewData["Title"] = "Ürün Stok Dağılımı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <!-- Google Charts -->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                dataType: "json",
                url: '@Url.Action("VisualizeProductResult", "Graphic")',
                success: function (result) {
                    google.charts.load('current', { packages: ['corechart'] });
                    google.charts.setOnLoadCallback(function () {
                        drawChart(result);
                    });
                },
                error: function (xhr, status, error) {
                    console.error("Grafik verisi alınamadı:", error);
                }
            });
        });

        function drawChart(result) {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Ürün');
            data.addColumn('number', 'Stok');

            var dataArray = [];
            $.each(result, function (i, obj) {
                dataArray.push([obj.product, obj.stock]);
            });
            data.addRows(dataArray);

            var options = {
                title: 'Ürün Stok Dağılımı',
                width: 1000,
                height: 600,
                pieHole: 0.4, // donut efekti
                colors: ['#4285F4', '#34A853', '#FBBC05', '#EA4335', '#9C27B0', '#00ACC1', '#F4511E'],
                backgroundColor: '#fafafa',
                legend: { position: 'right', textStyle: { fontSize: 14 } },
                chartArea: { left: 50, top: 50, width: '80%', height: '80%' }
            };

            var chart = new google.visualization.PieChart(document.getElementById('piechart_div'));
            chart.draw(data, options);
        }
    </script>
</head>

<body>
    <div style="margin: 50px auto; text-align: center;">
        <h2>📊 Ürün Stok Dağılımı</h2>
        <div id="piechart_div" style="width:1000px; height:600px; margin:auto;"></div>
    </div>
</body>
</html>

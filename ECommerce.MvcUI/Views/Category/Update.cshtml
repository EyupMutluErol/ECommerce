@using ECommerce.MvcUI.Models.CategoryModel

@model CategoryModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div class="col-md-9 mt-3 ml-3">
    <h2 class="mb-4"> Update Category</h2>
    <form asp-controller="Category" asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" value="@Model.Id"/>
        <div class="form-group row">
            <label class="col-md-2 col-form-label">Category Name</label>
            <div class="col-md-10">
                <input asp-for="Name"class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-10 offset-md-2">
                <button type="submit" value="Update" class="btn btn-primary" style="width:100px;">Update</button>
                <a asp-action="Index" asp-controller="Category" class="btn btn-warning" value="Cancel" style="width:100px;">Cancel</a>
            </div>

        </div>

    </form>


</div>

@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";

}
@section Scrpts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="login">
    <div class="container">
        <h2>Login Form</h2>

        @if(ViewBag.ErrorMessage!=null)
        {
            
            <div class="text-danger">@ViewBag.ErrorMessage</div>
        }
        
        <div class="login-form-grids animated wow slideInUp" data-wow-delay=".5s">
            <form asp-controller="Account" asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl"/>
                <input asp-for="Email" value="@Model.Email" class="form-control" placeholder="Email..." />
                <span asp-validation-for="Email"></span>
                <input asp-for="Password" value="@Model.Password" class="form-control" placeholder="Password..." />
                <span asp-validation-for="Password"></span>
                <input type="submit" value="Login" />
            </form>
        </div>
        <h4>For new People</h4>
        <p>
            <a href="/Account/Register">Register Here</a>(or) goto back to <a href="/HomePage/Index">Home<span class="glyphicon glyphicon-menu-right"aria-hidden="true"></span></a>
        </p>
    </div>




</div>